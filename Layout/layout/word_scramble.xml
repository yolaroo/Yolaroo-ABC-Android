<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wordScrambleLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="0dp"
    android:background="@android:color/transparent"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal" >

    <!-- letters -->

    <LinearLayout
        android:id="@+id/leftFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:baselineAligned="false"
        android:gravity="center"
        android:minHeight="250dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/frameOneTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:background="#30cccccc"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frameOneBottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1.2"
            android:background="#30cccccc"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp" >
        </LinearLayout>
    </LinearLayout>

    <!-- picture -->

    <LinearLayout
        android:id="@+id/rightFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="3"
        android:baselineAligned="false"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/bigSpellingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/myDescription"
            android:gravity="center"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/zebra" />
    </LinearLayout>

</LinearLayout>