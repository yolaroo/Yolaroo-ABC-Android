<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainFrameSecondScene"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/topFrame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="5dp"
        android:background="#800080"
        android:baselineAligned="false"
        android:gravity="center|bottom" >

        <FrameLayout
            android:id="@+id/frameOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" >

            <ImageButton
                android:id="@+id/imageOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/myDescription"
                android:src="@drawable/zebra" />

            <TextView
                android:id="@+id/textOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="#99000000"
                android:gravity="center_horizontal"
                android:text="@string/myTextString"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" >

            <ImageButton
                android:id="@+id/imageTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/myDescription"
                android:src="@drawable/zebra" />

            <TextView
                android:id="@+id/textTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="#99000000"
                android:gravity="center_horizontal"
                android:text="@string/myTextString"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" >

            <ImageButton
                android:id="@+id/imageThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/myDescription"
                android:src="@drawable/zebra" />

            <TextView
                android:id="@+id/textThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="#99000000"
                android:gravity="center_horizontal"
                android:text="@string/myTextString"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" >

            <ImageButton
                android:id="@+id/imageFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/myDescription"
                android:src="@drawable/zebra" />

            <TextView
                android:id="@+id/textFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:background="#99000000"
                android:gravity="center_horizontal"
                android:text="@string/myTextString"
                android:textColor="#ffffff"
                android:textSize="24sp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BottomFrame"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topFrame"
        android:layout_margin="5dp"
        android:background="#333fff"
        android:baselineAligned="false" >

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#99000000"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/myTextString"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#99000000"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/myTextString"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#99000000"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/myTextString"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#99000000"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/myTextString"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>